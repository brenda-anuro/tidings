<main class="access-point">
    <%- include('partials/nav')%>
    <form action="/login" method="post">
    <h2>LOG IN</h2>

    <%if(error){%>
        <p style="color: red;"><%= message%></p>
    <%}%>    
        <label for="">email</label>
        <input type="email" id="" name="email" value="<%= user.email %>"  required>
