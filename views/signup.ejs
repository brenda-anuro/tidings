<%- include('partials/header')%>

<main class="">
    <%- include ('partials/nav')%>
    <form action="/signup" method="post">
    <h2 class="header">SIGN UP</h2> 
    
    <% if(error){%>
        <p style="color: red;"><%= message%></p>
    <%}%>
    <label for="email">Email</label>
    <input type="email"id="" name="email" value="<%= user.email %>" required>
    <label for="fullname">Fullname</label>
    <input class="input-info" type="text" id="" name="fullname" value="<%= user.fullname %>">
    <label for="gender">Gender</label>
    <select name="gender" id="" required  value="">
      <%if(error){%>
        <option value="<%= user.gender %>" selected><%= user.gender %></option>
      <%} else {%>
        <option value="">--Please choose an option--</option>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
      <%}%>
    </select>
    <label for="password">Password</label>
    <input type="password" id="" name="password" value="<%= user.password %>" required>
    <label for="password">Confirm password</label>
    <input type="password" type="password" id="" name="confirmPassword" value="<%= user.confirmPassword %>" required>
    <input type="submit" value="Create Account" class="button">
    <p>Already have an account? <a href="/login">Log in</a></p>
  </form>
</main>



<%- include ('partials/footer')%>